{
    "compileOnSave": true, // 可以让IDE在保存文件的时候根据tsconfig.json重新生成文件
    "compilerOptions": {
        "target": "es2017",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "lib": [ "es7", "dom" ],
        "outDir": "./lib",
        "sourceMap": false //生成相应的map文件
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}

